<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventEase</title>

    @RenderSection("Styles", required: false)

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        :root {
            --bg-primary: #000000;
            --bg-secondary: #1C1C1E;
            --bg-tertiary: #2C2C2E;
            --text-primary: #FFFFFF;
            --text-secondary: #8E8E93;
            --accent-blue: #0A84FF;
            --accent-purple: #BF5AF2;
            --accent-gradient: linear-gradient(135deg, #0A84FF, #BF5AF2);
            --border-radius: 14px;
            --section-spacing: 2.5rem;
        }

        /* Background Animation */
        body {
            background: var(--bg-primary);
            color: var(--text-primary);
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            padding-bottom: 80px;
            position: relative;
            overflow-x: hidden;
        }

            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: radial-gradient(circle at top right, rgba(10, 132, 255, 0.1), transparent 70%), radial-gradient(circle at bottom left, rgba(191, 90, 242, 0.1), transparent 70%);
                z-index: -1;
                animation: gradientPulse 15s infinite alternate;
            }

        @@keyframes gradientPulse {
            0% {
                opacity: 0.5;
                transform: scale(1);
            }

            50% {
                opacity: 0.7;
                transform: scale(1.05);
            }

            100% {
                opacity: 0.5;
                transform: scale(1);
            }
        }

        /* iOS Status Bar */
        .status-bar {
            background: var(--bg-primary);
            padding: 0.5rem 1rem;
            border-bottom: 0.5px solid rgba(255,255,255,0.1);
            display: none;
            position: sticky;
            top: 0;
            z-index: 1080;
        }

        @@media (max-width: 768px) {
            .status-bar {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .status-icons {
                display: flex;
                gap: 8px;
            }
        }

        /* Navigation */
        .navbar {
            background: rgba(28, 28, 30, 0.8) !important;
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-bottom: 0.5px solid rgba(255,255,255,0.1);
            padding: 0.75rem 1rem;
            animation: slideInDown 0.8s cubic-bezier(0.16, 1, 0.3, 1);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        @@keyframes slideInDown {
            from {
                transform: translateY(-100%);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            letter-spacing: -0.5px;
            color: var(--text-primary) !important;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .navbar-brand i {
                background: var(--accent-gradient);
                -webkit-background-clip: text;
                background-clip: text;
                -webkit-text-fill-color: transparent;
                font-size: 1.6rem;
            }

        .nav-item {
            position: relative;
        }

        .nav-link {
            color: var(--text-secondary) !important;
            display: flex;
            flex-direction: column;
            align-items: center;
            font-size: 0.9rem;
            padding: 0.5rem 1.2rem !important;
            transition: color 0.3s ease;
        }

            .nav-link i {
                font-size: 1.2rem;
                margin-bottom: 0.25rem;
            }

        .active-link {
            color: var(--accent-blue) !important;
        }

            .active-link::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 5px;
                height: 5px;
                background: var(--accent-blue);
                border-radius: 50%;
                animation: pulseIndicator 2s infinite;
            }

        @@keyframes pulseIndicator {
            0% {
                transform: translateX(-50%) scale(1);
                opacity: 1;
            }

            50% {
                transform: translateX(-50%) scale(1.5);
                opacity: 0.5;
            }

            100% {
                transform: translateX(-50%) scale(1);
                opacity: 1;
            }
        }

        /* Mobile Navigation Bar (Bottom) */
        @@media (max-width: 992px) {
            body {
                padding-bottom: 70px;
            }

            .navbar {
                background: transparent !important;
                border: none;
                position: static;
            }

            #navbarNav {
                position: fixed;
                bottom: 0;
                left: 0;
                right: 0;
                background: rgba(28, 28, 30, 0.8);
                backdrop-filter: blur(10px);
                -webkit-backdrop-filter: blur(10px);
                border-top: 0.5px solid rgba(255,255,255,0.1);
                border-radius: 20px 20px 0 0;
                box-shadow: 0 -5px 20px rgba(0, 0, 0, 0.3);
                padding: 10px 0;
                z-index: 1000;
                animation: slideInUp 0.5s cubic-bezier(0.16, 1, 0.3, 1);
            }

            @@keyframes slideInUp {
                from {
                    transform: translateY(100%);
                }

                to {
                    transform: translateY(0);
                }
            }

            .navbar-nav {
                display: flex;
                flex-direction: row !important;
                justify-content: space-around;
                width: 100%;
            }

            .active-link::after {
                bottom: 5px;
            }

            .main-container {
                padding-top: 1rem;
            }
        }

        /* Main Content */
        .main-container {
            padding: 2rem 1rem;
            perspective: 1000px;
        }

        .content-wrapper {
            animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
            transform-style: preserve-3d;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding: 0 0.5rem;
        }

        .section-title {
            font-size: 1.8rem;
            font-weight: 700;
            letter-spacing: -0.5px;
            position: relative;
            display: inline-block;
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: -5px;
                left: 0;
                width: 40px;
                height: 3px;
                background: var(--accent-gradient);
                border-radius: 3px;
                animation: expandWidth 0.5s ease-out forwards;
            }

        @@keyframes expandWidth {
            from {
                width: 0;
            }

            to {
                width: 40px;
            }
        }

        /* Cards */
        .cards-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
            perspective: 1000px;
        }

        .card {
            background: rgba(28, 28, 30, 0.8);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-radius: var(--border-radius);
            border: 1px solid rgba(255, 255, 255, 0.1);
            overflow: hidden;
            position: relative;
            will-change: transform;
        }

            .card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(to right, rgba(10, 132, 255, 0.1), rgba(191, 90, 242, 0.1));
                opacity: 0;
                z-index: -1;
                border-radius: var(--border-radius);
            }

        .card-img-wrapper {
            position: relative;
            overflow: hidden;
            height: 200px;
        }

        .card-img-top {
            height: 100%;
            width: 100%;
            object-fit: cover;
        }

        .card-img-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, transparent, rgba(0, 0, 0, 0.7));
            opacity: 0;
        }

        .card-body {
            padding: 1.25rem;
            position: relative;
            z-index: 2;
        }

        .card-title {
            font-weight: 700;
            font-size: 1.2rem;
            margin-bottom: 0.75rem;
        }

        .card-text {
            color: var(--text-secondary);
            margin-bottom: 1rem;
            font-size: 0.9rem;
            line-height: 1.5;
        }

        .card-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1rem;
            font-size: 0.85rem;
            color: var(--text-secondary);
        }

        .card-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(10, 132, 255, 0.7);
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 50px;
            font-size: 0.7rem;
            font-weight: 600;
            backdrop-filter: blur(5px);
            transform: translateY(-20px);
            opacity: 0;
        }

        /* Card entry animations with staggering effect */
        .card:nth-child(1) {
            animation: cardEntry 0.5s ease-out 0.1s backwards;
        }

        .card:nth-child(2) {
            animation: cardEntry 0.5s ease-out 0.2s backwards;
        }

        .card:nth-child(3) {
            animation: cardEntry 0.5s ease-out 0.3s backwards;
        }

        .card:nth-child(4) {
            animation: cardEntry 0.5s ease-out 0.4s backwards;
        }

        .card:nth-child(5) {
            animation: cardEntry 0.5s ease-out 0.5s backwards;
        }

        .card:nth-child(6) {
            animation: cardEntry 0.5s ease-out 0.6s backwards;
        }

        @@keyframes cardEntry {
            from {
                opacity: 0;
                transform: translateY(30px) scale(0.9);
            }

            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        /* Buttons */
        .btn-primary {
            background: var(--accent-gradient);
            border: none;
            border-radius: 50px;
            padding: 0.8rem 1.5rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

            .btn-primary::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, #BF5AF2, #0A84FF);
                opacity: 0;
                z-index: -1;
            }

        .btn-outline {
            background: transparent;
            border: 1.5px solid rgba(255, 255, 255, 0.2);
            color: var(--text-primary);
            border-radius: 50px;
            padding: 0.7rem 1.3rem;
            font-weight: 500;
        }

        .btn-icon {
            position: relative;
            overflow: hidden;
        }

            .btn-icon i {
                margin-right: 0.5rem;
            }

        /* Floating Action Button */
        .fab {
            position: fixed;
            bottom: 80px;
            right: 20px;
            width: 56px;
            height: 56px;
            background: var(--accent-gradient);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 5px 15px rgba(10, 132, 255, 0.3);
            cursor: pointer;
            z-index: 99;
            animation: pulse 2s infinite;
        }

            .fab i {
                color: white;
                font-size: 1.5rem;
            }

        @@keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(10, 132, 255, 0.4);
            }

            70% {
                box-shadow: 0 0 0 15px rgba(10, 132, 255, 0);
            }

            100% {
                box-shadow: 0 0 0 0 rgba(10, 132, 255, 0);
            }
        }

        /* Search Bar */
        .search-container {
            position: relative;
            margin-bottom: 2rem;
            animation: fadeInDown 0.6s ease-out 0.2s backwards;
        }

        .search-input {
            width: 100%;
            background: rgba(44, 44, 46, 0.6);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 50px;
            padding: 0.8rem 1rem 0.8rem 3rem;
            color: var(--text-primary);
            transition: all 0.3s ease;
        }

            .search-input:focus {
                background: rgba(44, 44, 46, 0.8);
                border-color: var(--accent-blue);
                box-shadow: 0 0 0 3px rgba(10, 132, 255, 0.2);
                outline: none;
            }

        .search-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-secondary);
            transition: color 0.3s ease;
        }

        .search-input:focus + .search-icon {
            color: var(--accent-blue);
        }

        /* Event Date Indicator */
        .event-date {
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(5px);
            padding: 0.5rem;
            border-radius: 8px;
            position: absolute;
            top: 10px;
            left: 10px;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-width: 50px;
            transform: translateY(-20px);
            opacity: 0;
        }

        .event-date-day {
            font-size: 1.2rem;
            font-weight: 700;
            line-height: 1;
        }

        .event-date-month {
            font-size: 0.8rem;
            text-transform: uppercase;
            opacity: 0.8;
        }

        /* Modal Bottom Sheet */
        .footer-modal .modal-dialog {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            margin: 0;
            max-width: 100%;
        }

        .footer-modal .modal-content {
            border-radius: 20px 20px 0 0;
            background: rgba(28, 28, 30, 0.9);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            min-height: 60vh;
            animation: modalSlideUp 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        }

        @@keyframes modalSlideUp {
            from {
                transform: translateY(100%);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .modal-handle {
            width: 40px;
            height: 5px;
            background: var(--text-secondary);
            border-radius: 5px;
            margin: 0 auto;
            opacity: 0.5;
        }

        .modal-header {
            position: relative;
        }

        .modal-body {
            transition: all 0.3s ease;
        }

        .list-group-item {
            background: transparent;
            border-color: rgba(255, 255, 255, 0.1);
            color: var(--text-primary);
            padding: 1rem;
            margin-bottom: 0.5rem;
            border-radius: 10px;
        }

            .list-group-item i {
                color: var(--accent-blue);
            }

        /* Loading Skeleton Animation */
        .skeleton {
            background: linear-gradient(90deg, var(--bg-tertiary) 25%, rgba(44, 44, 46, 0.7) 50%, var(--bg-tertiary) 75%);
            background-size: 200% 100%;
            animation: loadingAnimation 1.5s infinite;
            border-radius: var(--border-radius);
        }

        @@keyframes loadingAnimation {
            0% {
                background-position: 200% 0;
            }

            100% {
                background-position: -200% 0;
            }
        }

        /* Ticket Animation */
        .ticket {
            position: relative;
            background: var(--bg-secondary);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            border-left: 4px solid var(--accent-blue);
            overflow: hidden;
        }

            .ticket::before {
                content: '';
                position: absolute;
                left: 0;
                top: 0;
                height: 100%;
                width: 4px;
                background: var(--accent-gradient);
                transform: scaleY(0);
                transform-origin: bottom;
            }

            .ticket::after {
                content: '';
                position: absolute;
                right: -20px;
                top: 50%;
                transform: translateY(-50%);
                width: 40px;
                height: 40px;
                background: var(--accent-gradient);
                border-radius: 50%;
                opacity: 0;
            }

        /* Animated Category Pills */
        .category-pills {
            display: flex;
            gap: 0.5rem;
            overflow-x: auto;
            padding: 0.5rem 0;
            margin-bottom: 1.5rem;
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

            .category-pills::-webkit-scrollbar {
                display: none;
            }

        .category-pill {
            background: rgba(44, 44, 46, 0.6);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 50px;
            padding: 0.5rem 1rem;
            white-space: nowrap;
            cursor: pointer;
        }

            .category-pill.active {
                background: var(--accent-gradient);
                border-color: transparent;
                box-shadow: 0 5px 15px rgba(10, 132, 255, 0.2);
            }

        /* Page Transitions */
        .page-transition-enter {
            opacity: 0;
            transform: translateY(20px);
        }

        .page-transition-enter-active {
            opacity: 1;
            transform: translateY(0);
            transition: opacity 0.5s, transform 0.5s;
        }

        .page-transition-exit {
            opacity: 1;
            transform: translateY(0);
        }

        .page-transition-exit-active {
            opacity: 0;
            transform: translateY(-20px);
            transition: opacity 0.5s, transform 0.5s;
        }

        /* Confetti Animation for Booking Success */
        .confetti {
            position: fixed;
            width: 10px;
            height: 10px;
            background: var(--accent-blue);
            border-radius: 2px;
            animation: confettiDrop 3s linear forwards;
            z-index: 1500;
        }

            .confetti:nth-child(2n) {
                background: var(--accent-purple);
            }

            .confetti:nth-child(3n) {
                background: #FF375F;
            }

            .confetti:nth-child(4n) {
                background: #30D158;
            }

        @@keyframes confettiDrop {
            0% {
                transform: translateY(-100vh) rotate(0deg);
                opacity: 1;
            }

            100% {
                transform: translateY(100vh) rotate(720deg);
                opacity: 0;
            }
        }

        /* Notification Dot */
        .notification-dot {
            position: absolute;
            top: 5px;
            right: 5px;
            width: 8px;
            height: 8px;
            background: #FF375F;
            border-radius: 50%;
            animation: pulseDot 2s infinite;
        }

        @@keyframes pulseDot {
            0% {
                transform: scale(1);
                opacity: 1;
            }

            50% {
                transform: scale(1.5);
                opacity: 0.5;
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        /* Shimmer Effect for New Events */
        .new-event::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 50%;
            height: 100%;
            background: linear-gradient( to right, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.1) 50%, rgba(255, 255, 255, 0) 100% );
            animation: shimmer 3s infinite;
            z-index: 1;
        }

        @@keyframes shimmer {
            0% {
                left: -100%;
            }

            100% {
                left: 200%;
            }
        }
    </style>
</head>
<body>
    <!-- iOS Status Bar -->
    <div class="status-bar">
        <span id="time">9:41</span>
        <div class="status-icons">
            <i class="fas fa-wifi"></i>
            <i class="fas fa-battery-full"></i>
        </div>
    </div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-calendar-check"></i>EventEase
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active-link" : "")"
                               asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i>
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Events" ? "active-link" : "")"
                               asp-controller="Events" asp-action="Index">
                                <i class="fas fa-calendar-alt"></i>
                                Events
                            </a>
                        </li>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Venue" ? "active-link" : "")"
                               asp-controller="Venue" asp-action="Index">
                                <i class="fas fa-map-marker-alt"></i>
                                Venue
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "Profile" ? "active-link" : "")"
                               asp-controller="Booking" asp-action="Index">
                                <i class="fas fa-user"></i>
                                Bookings
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-container">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>