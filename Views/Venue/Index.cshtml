@model IEnumerable<Venue>

@{
    ViewData["Title"] = "Venues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title">Venue List</h2>
        <a asp-action="Create" class="btn btn-primary">+ Create New</a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 text-white">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.VenueName" />
                    <div class="card-body">
                        <h5 class="card-title">@item.VenueName</h5>
                        <p class="card-text">
                            <strong>Location:</strong> @item.Location<br />
                            <strong>Capacity:</strong> @item.Capacity
                        </p>
                    </div>
                    <div class="card-footer bg-transparent border-0 d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.VenueId" class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.VenueId" class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.VenueId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
