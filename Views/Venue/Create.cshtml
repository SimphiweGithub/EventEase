@model Venue

@{
    ViewData["Title"] = "Create Venue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 text-white">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title">Create New Venue</h2>
        <a asp-action="Index" asp-controller="Venues" class="btn btn-outline-light">← Back to List</a>
    </div>

    <div class="row">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group mb-4">
                    <label asp-for="VenueName" class="form-label">Venue Name</label>
                    <input asp-for="VenueName" class="form-control bg-dark text-white border-secondary" />
                    <span asp-validation-for="VenueName" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Location" class="form-label">Location</label>
                    <input asp-for="Location" class="form-control bg-dark text-white border-secondary" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Capacity" class="form-label">Capacity</label>
                    <input asp-for="Capacity" class="form-control bg-dark text-white border-secondary" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="ImageUrl" class="form-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control bg-dark text-white border-secondary" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group d-flex gap-2">
                    <button type="submit" class="btn btn-success px-4">Create</button>
                    <a asp-action="Index" asp-controller="Venues" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
