@model Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-gradient-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0 fs-3"><i class="bi bi-info-circle me-2"></i>Booking Details</h2>
                <a asp-action="MyBookings" asp-controller="Booking" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left me-1"></i>Back to My Bookings
                </a>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3 border-0 shadow-sm">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-calendar3 me-2"></i>Booking Information</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">
                                    <i class="bi bi-calendar-date me-1"></i>
                                    @Html.DisplayNameFor(model => model.BookingDate)
                                </dt>
                                <dd class="col-sm-8 mb-3">
                                    <span class="badge bg-light text-dark p-2">
                                        @Html.DisplayFor(model => model.BookingDate)
                                    </span>
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="bi bi-star me-1"></i>
                                    @Html.DisplayNameFor(model => model.Event)
                                </dt>
                                <dd class="col-sm-8 mb-3">
                                    @Html.DisplayFor(model => model.Event.EventName)
                                </dd>

                                <dt class="col-sm-4">
                                    <i class="bi bi-geo-alt me-1"></i>
                                    @Html.DisplayNameFor(model => model.Venue)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Venue.Location)<br>
                                    <small class="text-muted">@Html.DisplayFor(model => model.Venue.VenueName)</small>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Actions</h5>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <div class="d-grid gap-3 col-md-8">
                                <a asp-action="Edit" asp-route-id="@Model?.BookingId" class="btn btn-warning">
                                    <i class="bi bi-pencil me-2"></i>Edit Booking
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model?.BookingId" class="btn btn-danger">
                                    <i class="bi bi-trash me-2"></i>Delete Booking
                                </a>
                                <a asp-action="MyBookings" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Back to My Bookings
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>