@model Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-gradient-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0 fs-3"><i class="bi bi-trash me-2"></i>Delete Booking</h2>
                <a asp-action="MyBookings" asp-controller="Booking" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left me-1"></i>Back to My Bookings
                </a>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="alert alert-warning">
                <div class="d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle fs-2 me-3"></i>
                    <div>
                        <h4 class="alert-heading">Warning!</h4>
                        <p class="mb-0">Are you sure you want to delete this booking? This action cannot be undone.</p>
                    </div>
                </div>
            </div>

            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Booking Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">
                            <i class="bi bi-calendar-date me-1"></i>
                            @Html.DisplayNameFor(model => model.BookingDate)
                        </dt>
                        <dd class="col-sm-9 mb-3">
                            <span class="badge bg-light text-dark p-2">
                                @Html.DisplayFor(model => model.BookingDate)
                            </span>
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-star me-1"></i>
                            @Html.DisplayNameFor(model => model.Event)
                        </dt>
                        <dd class="col-sm-9 mb-3">
                            @Html.DisplayFor(model => model.Event.EventName)
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-geo-alt me-1"></i>
                            @Html.DisplayNameFor(model => model.Venue)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Venue.Location)
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="text-end">
                <input type="hidden" asp-for="BookingId" />
                <a asp-action="MyBookings" class="btn btn-outline-secondary me-2">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i>Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>